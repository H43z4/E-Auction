@model IEnumerable<Models.Views.Auction.Series>
    
<div class="auction-block">
    <table class="registration-table add other">
        <tr>
            <th class="col-md-1"></th>
            <th>Series</th>
            <th>Reg. Start Date/Time</th>
            <th>Reg. End Date/Time</th>
            <th>Auction Start Date/Time</th>
            <th>Auction End Date/Time</th>
            <th class="one"></th>
        </tr>
        @{
            int rowNum = 0;
        }
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-md-center">NOT FOUND.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@{ rowNum++; } @rowNum</td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegStartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegEndDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuctionStartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuctionEndDateTime)
                </td>
                <td>
                    @Html.ActionLink("Select", "EditSeries", new { seriesId = item.Id }, htmlAttributes: new { @class = "btn-select" })
                </td>
            </tr>
        }
    </table>
</div>
