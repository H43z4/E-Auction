@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="content-area col-sm-9">
    <div class="detail-block">
        <h1>@ViewData["Title"]</h1>
        <br />
        <div class="row">
            <div class="col-sm-12 alert-success">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>

        <div class="login-form">
            <div class="form-holder col-md-8">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <input type="hidden" name="SignupMode" value="1" />
                    <div class="form-group">
                        <label class="radio-inline">
                            <input type="radio" name="optradio" value="1" checked>Email
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio" value="2">Mobile Phone No.
                        </label>
                    </div>
                    <br />
                    <div class="form-group" id="emailDiv">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="phoneDiv">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" data-inputmask="'mask': '(0399)-9999999'" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <p></p>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {

            $('input[type=radio][name=optradio]').change(function () {

                if (this.value == '1') {
                    $("#emailDiv").show();
                    $("#phoneDiv").hide();
                }
                else if (this.value == '2') {
                    $("#emailDiv").hide();
                    $("#phoneDiv").show();
                }

                //alert(this.value);
                $("input[name=SignupMode]").val(this.value);
            });
        })

    </script>

    <script src="~/lib/jquery.inputmask 5.0.2/jquery.inputmask.min.js"></script>
    <script src="~/lib/jquery.inputmask 5.0.2/bindings/inputmask.binding.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
