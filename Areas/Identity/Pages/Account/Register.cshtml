@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<style type="text/css">
    .form-group {
        margin-bottom: 15px;
    }

    a:disabled {
        background: #dddddd;
    }
</style>

<div class="content-area col-sm-9" id="signupDiv">
    <div class="detail-block">
        <h1>@ViewData["Title"]</h1>
        <br />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="~/css/sweetalert.css" rel="stylesheet" />
    <script src="~/lib/Custom/sweetalert.min.js"></script>

    <script src="~/lib/jquery.inputmask 5.0.2/jquery.inputmask.min.js"></script>
    <script src="~/lib/jquery.inputmask 5.0.2/bindings/inputmask.binding.js"></script>

    <script type="text/javascript">

        function isCharKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 65 && charCode <= 90 || charCode >= 97 && charCode <= 122 || charCode == 32)
            return true;

            return false;
        }

        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }

        $(document).ready(function () {

            $('#chkAgree').prop('checked', false);
            $('#btnNext').css('background-color', 'gray');

            $('#btnNext').click(function (e) {

                var val = $('#chkAgree').is(':checked');

                if (val == false) {

                    swal("Error!", "Please, accept the terms and confitions to move forward.", "error");
                    e.preventDefault();
                }
            });


            $('#chkAgree').click(function () {

                var val = $('#chkAgree').is(':checked');

                if (val == false) {

                    $('#btnNext').css('background-color', 'gray');
                }
                else {

                    $('#btnNext').css('background-color', 'rgb(71, 124, 153)');
                }
            })
        });

    </script>
}

<div class="content-area col-sm-9" id="signupDiv">
    <div class="detail-block">

