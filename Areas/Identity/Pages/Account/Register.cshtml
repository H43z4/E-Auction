                    <br />
                    <div class="container">
                        <div class="col-sm-8 alert-success">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>

                    <div class="login-form">
                        <div class="form-holder col-md-8">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="form-group">
                                    <label asp-for="Input.Name"></label>
                                    <input asp-for="Input.Name" class="form-control" onkeypress="return isCharKey(this, event);" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.CNIC"></label>
                                    <input asp-for="Input.CNIC" class="form-control" data-inputmask="'mask': '99999-9999999-9'" />
                                    <span asp-validation-for="Input.CNIC" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.NTN"></label>
                                    <input asp-for="Input.NTN" class="form-control" />
                                    <span asp-validation-for="Input.NTN" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Company"></label>
                                    <input asp-for="Input.Company" class="form-control" />
                                    <span asp-validation-for="Input.Company" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Input.PhoneNumber">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" style="border: 2px solid #d2d2d2;">+92</span>
                                        <input type="text" class="form-control" placeholder="3001234567" asp-for="Input.PhoneNumber" maxlength="10"  onkeypress="return isNumberKey(this, event);">
                                    </div>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Abc@email.com"/>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label><br /><small>(Must contain at least 8 characters, including upper/lower case and numbers.)</small>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Abcd@12345" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Abcd@12345" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <p></p>
                                <div class="agree-footer">
                                    <div class="checkbox-holder">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" id="chkAgree" />
                                                <label for="chkAgree">I have read and agree to the Terms & Conditions.</label>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="button-holder">
                                        <button id="btnNext" class="btn-next">Register</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>

