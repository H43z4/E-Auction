@page
@model ProfileModel

@{
    ViewData["Title"] = "Profile";
}


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Please, provide following information.</h4>
                <p>All fields are required except 'Father/ Husband Name'.</p>
                <p>You can provide CNIC or NTN. Atleast one of them is required.</p>
                <hr />
                <div class="text-success">@ViewData["Success"]</div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserProfile.Name"></label>
                    <input asp-for="UserProfile.Name" class="form-control" />
                    <span asp-validation-for="UserProfile.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfile.FatherHusbandName"></label>
                    <input asp-for="UserProfile.FatherHusbandName" class="form-control" />
                    <span asp-validation-for="UserProfile.FatherHusbandName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfile.CNIC"></label>
                    <input asp-for="UserProfile.CNIC" class="form-control" data-inputmask="'mask': '99999-9999999-9'" />
                    <span asp-validation-for="UserProfile.CNIC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfile.NTN"></label>
                    <input asp-for="UserProfile.NTN" class="form-control" />
                    <span asp-validation-for="UserProfile.NTN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfile.PhoneNumber"></label>
                    <input asp-for="UserProfile.PhoneNumber" class="form-control" data-inputmask="'mask': '(0399)-9999999'" />
                    <span asp-validation-for="UserProfile.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfile.Address"></label>
                    <input asp-for="UserProfile.Address" class="form-control" />
                    <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery.inputmask 5.0.2/jquery.inputmask.min.js"></script>
    <script src="~/lib/jquery.inputmask 5.0.2/bindings/inputmask.binding.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
