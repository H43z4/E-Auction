@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="content-area col-sm-9">
    <div class="detail-block">
        <h1>@ViewData["Title"]</h1>
        <br />
        <div class="row">
            <div class="col-sm-12 alert-success">
                <h4>Enter your CNIC.</h4>
            </div>
        </div>

        <div class="login-form">
            <div class="form-holder col-md-8">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.CNIC"></label>
                        <input asp-for="Input.CNIC" class="form-control" data-inputmask="'mask': '99999-9999999-9'" />
                        <span asp-validation-for="Input.CNIC" class="text-danger"></span>
                    </div>
                    <p></p>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/lib/jquery.inputmask 5.0.2/jquery.inputmask.min.js"></script>
    <script src="~/lib/jquery.inputmask 5.0.2/bindings/inputmask.binding.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
